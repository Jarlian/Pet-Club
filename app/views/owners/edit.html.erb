<h2>Editar información de dueño</h2>
<%= form_with model: @owner do |form| %>
  <div>
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>

  <div>
    <%= form.label :cedula %>
    <%= form.number_field :cedula %>
  </div>

  <div>
    <%= form.label :telefono %>
    <%= form.number_field :telefono %>
  </div>

  <div>
    <%= form.label :correo %>
    <%= form.text_field :correo %>
  </div>
  <%= form.submit "Actualizar datos" %>
<% end %>
